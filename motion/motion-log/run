#!/usr/bin/execlineb -P
envfile /etc/s6/config/motion.conf
importas -sCiu DIRECTIVES DIRECTIVES
ifelse { test -w /var/log } {
foreground { if -n -t { test -d /var/log/motion } install -d -m 0755 -o s6log -g s6log /var/log/motion }
s6-setuidgid s6log exec -c s6-log -d3 -b -- ${DIRECTIVES} /var/log/motion
}
foreground { install -d -o s6log -g s6log /run/log/motion }
s6-setuidgid s6log exec -c s6-log -d3 -b -- ${DIRECTIVES} /run/log/motion
