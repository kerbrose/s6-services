#!/bin/execlineb -P
envfile /etc/s6/config/libvirt.conf
importas -sCuD "n3 s2000000 T" VIRTLOCKD_DIRECTIVES VIRTLOCKD_DIRECTIVES
ifelse { test -w /var/log } {
	foreground { install -d -o s6log -g s6log /var/log/virtlockd }
	s6-setuidgid s6log exec -c s6-log -d3 -b -- ${VIRTLOCKD_DIRECTIVES} /var/log/virtlockd
}
foreground { install -d -o s6log -g s6log /run/log/virtlockd }
s6-setuidgid s6log exec -c s6-log -d3 -b -- ${VIRTLOCKD_DIRECTIVES} /run/log/virtlockd
