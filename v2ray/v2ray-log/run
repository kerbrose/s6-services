#!/usr/bin/execlineb -P
envfile /etc/s6/config/v2ray.conf
importas -sCiu DIRECTIVES DIRECTIVES
ifelse { test -w /var/log } {
	foreground { install -d -o s6log -g s6log /var/log/v2ray }
	s6-setuidgid s6log exec -c s6-log -d3 -b -- ${DIRECTIVES} /var/log/v2ray
}
foreground { install -d -o s6log -g s6log /run/log/v2ray }
s6-setuidgid s6log exec -c s6-log -d3 -b -- ${DIRECTIVES} /run/log/v2ray
